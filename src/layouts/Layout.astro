---
import { BRAND } from "astro:schema";
import "../styles/global.css";
import { Icon } from "astro-icon/components";
import { Picture } from "astro:assets";

// Import images
import gerilifeLogo from "../assets/images/gerilife.png";
import caregiverAndSenior from "../assets/images/caregiver-and-senior.jpg";

interface Props {
  title?: string;
  description?: string;
  image?: ImageMetadata;
}

const {
  title = "GeriLife | Enhancing Elder Care Through Meaningful Connection",
  description = "Software that helps caregivers track, measure, and improve quality of life for seniors through meaningful engagement and data-driven insights.",
  image = caregiverAndSenior,
} = Astro.props;

const BASE_URL = import.meta.env.BASE_URL || "";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href={canonicalURL} />
    <link
      rel="icon"
      type="image/x-icon"
      href={`${BASE_URL}/src/assets/images/favicon.ico`}
    />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image.src} />
    <meta property="og:site_name" content="GeriLife" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image.src} />

    <!-- Additional Meta Tags -->
    <meta name="theme-color" content="#4a9eff" />
    <meta name="author" content="GeriLife" />
  </head>
  <body>
    <!-- Navigation -->
    <nav class="container mx-auto py-4 px-4 flex justify-between items-center">
      <!-- Logo and Brand Name -->
      <div class="flex items-center">
        <a href={`${BASE_URL}`} class="flex items-center">
          <Picture
            src={gerilifeLogo}
            formats={["avif", "webp", "png"]}
            alt="GeriLife Logo"
            class="w-auto h-10 object-contain mr-3"
            widths={[40]}
          />
          <span class="text-2xl font-serif text-primary font-bold"
            >GeriLife</span
          >
        </a>
      </div>
      <!-- Desktop Navigation Links -->
      <div class="hidden md:flex space-x-6">
        <a
          href={`${BASE_URL}/about#mission`}
          class="hover:text-primary transition-colors">Our Mission</a
        >
        <a
          href={`${BASE_URL}/#features`}
          class="hover:text-primary transition-colors">Features</a
        >
        <a
          href={`${BASE_URL}/#testimonials`}
          class="hover:text-primary transition-colors">Testimonials</a
        >
        <a
          href={`${BASE_URL}/pricing`}
          class="hover:text-primary transition-colors">Pricing</a
        >
        <a
          href={`${BASE_URL}/about`}
          class="hover:text-primary transition-colors">About Us</a
        >
      </div>
      <!-- CTA Button (visible on both mobile and desktop) -->
      <div class="hidden md:block">
        <a
          href="mailto:hello@geri.life?subject=I'd%20like%20to%20schedule%20a%20demo"
          class="btn btn-primary">Request Demo</a
        >
      </div>
      <!-- Mobile Menu Button -->
      <div class="md:hidden flex items-center">
        <button id="mobile-menu-button" class="p-2" aria-label="Open menu">
          <Icon name="material-symbols:menu" class="h-6 w-6" />
        </button>
      </div>
      <!-- Mobile Menu (hidden by default) -->
      <div id="mobile-menu" class="hidden fixed inset-0 bg-white z-50 p-4">
        <div class="flex justify-between items-center mb-6">
          <div class="flex items-center">
            <Picture
              src={gerilifeLogo}
              formats={["avif", "webp", "png"]}
              alt="GeriLife Logo"
              class="w-auto h-8 object-contain mr-2"
              widths={[32]}
            />
            <span class="text-xl font-serif text-primary font-bold"
              >GeriLife</span
            >
          </div>
          <button id="close-menu-button" class="p-2" aria-label="Close menu">
            <Icon name="material-symbols:close" class="h-6 w-6" />
          </button>
        </div>

        <div class="flex flex-col space-y-4">
          <a
            href={`${BASE_URL}/#mission`}
            class="py-2 hover:text-primary transition-colors">Our Mission</a
          >
          <a
            href={`${BASE_URL}/#features`}
            class="py-2 hover:text-primary transition-colors">Features</a
          >
          <a
            href={`${BASE_URL}/#testimonials`}
            class="py-2 hover:text-primary transition-colors">Testimonials</a
          >
          <a
            href={`${BASE_URL}/pricing`}
            class="py-2 hover:text-primary transition-colors">Pricing</a
          >
          <button class="btn btn-primary mt-4 w-full">Request Demo</button>
        </div>
      </div>
    </nav>

    <slot />

    <!-- Back to top button -->
    <button
      id="back-to-top"
      class="fixed bottom-8 right-8 p-2 rounded-full bg-primary text-white shadow-lg opacity-0 transition-opacity duration-300 hover:bg-primary-focus"
      aria-label="Back to top"
    >
      <Icon name="material-symbols:arrow-upward-rounded" class="h-6 w-6" />
    </button>

    <!-- Footer -->
    <footer class="bg-neutral text-neutral-content py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <div class="flex items-center mb-4">
              <Picture
                src={gerilifeLogo}
                formats={["avif", "webp", "png"]}
                alt="GeriLife Logo"
                class="w-auto h-8 object-contain mr-2"
                widths={[32]}
              />
              <span class="text-xl font-serif font-bold">GeriLife</span>
            </div>
            <p class="mb-4">
              Enhancing elder care through meaningful connection and data-driven
              insights.
            </p>
          </div>

          <div>
            <h3 class="text-lg font-bold mb-4">Platform</h3>
            <ul class="space-y-2">
              <li>
                <a
                  href={`${BASE_URL}/#features`}
                  class="hover:text-accent transition-colors">Features</a
                >
              </li>
              <li>
                <a
                  href={`${BASE_URL}/pricing`}
                  class="hover:text-accent transition-colors">Pricing</a
                >
              </li>
              <li>
                <a
                  href={`${BASE_URL}/#testimonials`}
                  class="hover:text-accent transition-colors">Testimonials</a
                >
              </li>
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-bold mb-4">Company</h3>
            <ul class="space-y-2">
              <li>
                <a
                  href={`${BASE_URL}/about#mission`}
                  class="hover:text-accent transition-colors">About Us</a
                >
              </li>
              <li>
                <a
                  href="mailto:hello@geri.life?subject=I'd%20like%20to%20learn%20more%20about%20GeriLife%20Caregiving"
                  class="hover:text-accent transition-colors">Contact</a
                >
              </li>
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-bold mb-4">Contact Us</h3>
            <ul class="space-y-2">
              <li class="flex items-start">
                <Icon
                  name="material-symbols:alternate-email"
                  class="h-5 w-5 mt-0.5 mr-2"
                />
                <span>hello@geri.life</span>
              </li>
              <li class="flex items-start">
                <Icon
                  name="material-symbols:location-on"
                  class="h-5 w-5 mt-0.5 mr-2"
                />
                <span>Made in Finland</span>
              </li>
            </ul>
          </div>
        </div>

        <div
          class="border-t border-neutral-content/20 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center"
        >
          <p>Â© {new Date().getFullYear()} GeriLife. All rights reserved.</p>
          <!-- TODO: develop privacy policy, terms of service, and accessibility guidelines -->
          <!-- <div class="flex space-x-6 mt-4 md:mt-0">
            <a href="#" class="text-sm hover:text-accent transition-colors"
              >Privacy Policy</a
            >
            <a href="#" class="text-sm hover:text-accent transition-colors"
              >Terms of Service</a
            >
            <a href="#" class="text-sm hover:text-accent transition-colors"
              >Accessibility</a
            >
          </div> -->
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu functionality
      document.addEventListener("DOMContentLoaded", () => {
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const closeMenuButton = document.getElementById("close-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        if (!mobileMenuButton || !closeMenuButton || !mobileMenu) {
          console.error("Mobile menu elements not found");
          return;
        }

        const mobileMenuLinks = mobileMenu.querySelectorAll("a");

        // Open mobile menu
        mobileMenuButton.addEventListener("click", () => {
          mobileMenu.classList.remove("hidden");
          document.body.style.overflow = "hidden"; // Prevent scrolling when menu is open
        });

        // Close mobile menu
        closeMenuButton.addEventListener("click", () => {
          mobileMenu.classList.add("hidden");
          document.body.style.overflow = ""; // Restore scrolling
        });

        // Close menu when a link is clicked
        mobileMenuLinks.forEach((link) => {
          link.addEventListener("click", () => {
            mobileMenu.classList.add("hidden");
            document.body.style.overflow = "";
          });
        });
      });

      // Back to top button functionality
      document.addEventListener("DOMContentLoaded", () => {
        const backToTopButton = document.getElementById("back-to-top");

        if (!backToTopButton) {
          console.error("Back to top button not found");
          return;
        }

        const toggleBackToTopButton = () => {
          if (window.scrollY > 300) {
            backToTopButton.classList.remove("opacity-0");
            backToTopButton.classList.add("opacity-100");
          } else {
            backToTopButton.classList.remove("opacity-100");
            backToTopButton.classList.add("opacity-0");
          }
        };

        window.addEventListener("scroll", toggleBackToTopButton);

        backToTopButton.addEventListener("click", () => {
          window.scrollTo({
            top: 0,
            behavior: "smooth",
          });
        });
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  #back-to-top {
    z-index: 40;
    pointer-events: auto;
  }

  #back-to-top.opacity-0 {
    pointer-events: none;
  }
</style>
